{
    "name": "${environmentName}",
    "description": "Kanboard",
    "version": "1.0.0",
    "author": "https://github.com/marcoarthur",
    "ssh-key": "mprado", 
    "containers": [
        {
            "hostname": "kanboard",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName}",
                    "internal-port": "80",
                    "external-port": "80"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP",
            "max-price": ""
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/subutai-blueprints/subutai-blueprint-kanboard/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name_var",
                "value": "${domainName}"
            },
            {
                "key": "admin_user_var",
                "value": "${adminUser}"
            },
            {
                "key": "admin_pwd_var",
                "value": "${adminPwd}"
            }],
        "groups": [
            {
                "name": "kb",
                "hostnames": [
                    "kanboard"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "kanboard",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the wiki domain name",
            "type": "domain",
            "default": "",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "SMALL",
            "validation": "SMALL,MEDIUM,LARGE,HUGE"
        },
        "adminUser": {
            "description": "Kanboard administrator's username",
            "type": "string",
            "default": "admin",
            "validation": "[a-zA-Z0-9]+"
        },
        "adminPwd": {
            "description": "Kanboard administrator's password",
            "type": "string",
            "default": "topsecret",
            "validation": "[a-zA-Z0-9]+"
        }

    }
}
